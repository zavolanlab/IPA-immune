manifest {
  description = 'IPA-derived multi-omics analysis pipeline implemented with Nextflow' 
  author = 'Máté Balajti'
  nextflowVersion = '>=23.04.0'
}

/* 
 * default params 
 */
 
params.outdir = "results"
params.sample_bam = "${projectDir}/tests/files/GSM1502499_RNA_seq_control_rep2.chr22.bam"
params.annotation_gtf = "${projectDir}/tests/files/Homo_sapiens.GRCh38.87.chr.support_level_5.correct_gene_coordinates.chr1.14.22.X.16.gtf"
params.polya_sites_bed = "${projectDir}/tests/files/polya_sites.merged.anno.hg38.ENSEMBL.chr1.14.22.X.16.bed"
params.genome_fa = "${projectDir}/tests/files/Homo_sapiens.GRCh38.dna_sm.primary_assembly.fixed.fa"

/* 
 * defines execution profiles for different environments  
 */ 

profiles {
  singularity {
    singularity.enabled = true
    singularity.autoMounts = true
  }
  conda {
    conda.enabled = true
    conda.channels = 'bioconda,conda-forge,defaults'
  }
}