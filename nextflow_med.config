manifest {
  description = 'IPA-derived multi-omics analysis pipeline implemented with Nextflow'
  nextflowVersion = '>=23.04.0'
}

/* 
 * default params 
 */

params {
  out_dir = "${projectDir}/results/LIHC_e"
  log_dir = "${projectDir}/logs/LIHC_e"
}

params {
  input_fastq = "/project/data/tcga_data_raw_nobackup/TCGA-LIHC/bam/e*/*.R{1,2}.fastq"
  genome_index = "/project/home/bmate/Work/IPA-immune/tests/STAR_index"
  threads_pe = 16
  threads_se = 8
}

params {
  annotation_gtf = "/project/home/bmate/Work/IPA-immune/tests/gencode.v42.annotation.gtf"
  polya_sites_bed = "/project/home/bmate/Work/IPA-immune/tests/SCINPAS_all_normal_q15Expr.bed"
  genome_fa = "/project/home/bmate/Work/IPA-immune/tests/GRCh38.primary_assembly.genome.fa"
}

/* 
 * defines execution profiles for different environments  
 */ 

profiles {
  slurm {
    includeConfig "conf/envs/slurm.config"
  }
  slurm_med {
    includeConfig "conf/envs/slurm_med.config"
  }
  docker {
    docker.enabled = true
  }
  singularity {
    enabled = true
    autoMounts = true
    cacheDir = "${HOME}/.singularity/cache/library"
    libraryDir = "${HOME}/.singularity/cache/library"
  }
  conda {
    conda.enabled = true
    conda.channels = 'bioconda,conda-forge,defaults'
    process.conda = 'install/environment.yml'
  }
  conda_med {
    conda.enabled = true
    conda.cacheDir = '/project/home/bmate/miniconda3/envs/ipa-immune'
  }
}
